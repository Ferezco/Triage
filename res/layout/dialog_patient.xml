<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/record_dialog_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin">
    
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
   <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        
        <TextView
    	    android:id="@+id/patient_name_text"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text = "Name"
    	    android:layout_weight=".05"/>
    	
        <EditText 
        android:id="@+id/patient_name_editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:singleLine="true"
        android:layout_weight=".95"
        />

    </TableRow>
    
    <TableRow 
       	android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        
        <TextView
    	    android:id="@+id/patient_healthcard_text"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text = "Health Card"
    	    android:layout_weight=".05"
    	/>
    	
        <EditText 
	        android:id="@+id/patient_healthcard_editText"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="16dp"
	        android:maxLength="6"
	        android:singleLine="true"
	        android:layout_weight=".95"
        />
     </TableRow>
     <TableRow 
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        
         <TextView 
	    android:layout_width = "fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="4dp"
	    android:gravity="center_horizontal"
	    android:text="Date of Birth"
	    android:layout_weight="1"
	    />
     </TableRow>
    
	</TableLayout>
	
    	<DatePicker 
	        android:id="@+id/patient_date_picker"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:calendarViewShown="false"
	        android:layout_weight="1"
        />
</LinearLayout>